# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/resiflow
# OR use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/resiflow?retryWrites=true&w=majority

# JWT Secret (change this to a random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Encryption Keys (for sensitive medical data)
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_IV=your-16-char-iv

# API Keys
GEMINI_API_KEY=your-gemini-api-key-here

# CORS Settings
CORS_ORIGIN=http://localhost:5173

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# Session
SESSION_SECRET=your-session-secret-change-in-production

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
